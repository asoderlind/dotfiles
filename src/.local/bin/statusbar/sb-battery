#!/bin/bash

batpercent="$(cat /sys/class/power_supply/BAT0/capacity)"
batstatus="$(cat /sys/class/power_supply/BAT0/status)"
baticon=" "
if [ "$batstatus" == "Discharging" ]; then
	if   [ "$batpercent" -lt "20" ]; then
		baticon=" "
	elif [ "$batpercent" -lt "40" ]; then
		baticon=" "
	elif [ "$batpercent" -lt "60" ]; then
		baticon=" "
	else
		baticon=" "
	fi
elif [ "$batstatus" == "Charging" ]; then
	baticon=""
fi

echo "$baticon $batpercent%"
