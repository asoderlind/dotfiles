#!/bin/bash

vol="$(pamixer --get-volume)"

if [ $(pamixer --get-mute) = true ]; then
	icon="ﱝ"
	iconname="audio-volume-muted"
elif [ "$vol" -gt "50" ]; then
	icon="墳"
	iconname="audio-volume-high"
elif [ "$vol" -lt "20" ]; then
	icon="奄"
	iconname="audio-volume-low"
else
	icon="奔"
	iconname="audio-volume-medium"
fi

echo "^c#ebcb8b^$icon $vol"
