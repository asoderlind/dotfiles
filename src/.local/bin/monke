#!/bin/bash

push () {
    rsync -arv --progress --delete "$HOME/Dropbox/" monkebrain.com:cloud/
}

pull () {
    rsync -arv --progress "$@" monkebrain.com:cloud/ "$HOME/Dropbox/" 
}

if [ ! -d "$HOME/cloud" ]; then
    mkdir -p "$HOME/cloud"
fi

case "$1" in
    "push") shift; push "$@" ;;
    "pull") shift; pull "$@" ;;
esac
