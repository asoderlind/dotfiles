#!/bin/bash

push () {
    rsync -arv --progress --delete "$@" "$HOME/Dropbox/" monkebrain.com:cloud/
}

pull () {
    rsync -arv --progress "$@" monkebrain.com:cloud/notes/ "$HOME/Dropbox/notes/" 
}

if [ ! -d "$HOME/Dropbox" ]; then
    mkdir -p "$HOME/Dropbox"
fi

case "$1" in
    "push") shift; push "$@" ;;
    "pull") shift; pull "$@" ;;
esac
