#!/bin/bash

push () {
    rsync -arv --progress --delete "$@" "$HOME/cloud/" monkebrain.com:cloud/
}

pull () {
    rsync -arv --progress "$@" monkebrain.com:cloud/notes/ "$HOME/cloud/notes/" 
}

if [ ! -d "$HOME/cloud" ]; then
    mkdir -p "$HOME/cloud"
fi

case "$1" in
    "push") shift; push "$@" ;;
    "pull") shift; pull "$@" ;;
esac
